<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        style="?attr/materialIconButtonFilledStyle"
        android:id="@+id/volume_breath_help"
        android:background="@drawable/ic_volume_on"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="96dp"
        android:layout_marginStart="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/pulse_help_breath"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:layout_marginTop="248dp"
        android:background="@drawable/background_breath_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/indicator_pulse_help_breath"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:background="@drawable/indicator_breath"
        app:layout_constraintStart_toStartOf="@id/pulse_help_breath"
        app:layout_constraintEnd_toEndOf="@id/pulse_help_breath"
        app:layout_constraintTop_toTopOf="@id/pulse_help_breath"
        app:layout_constraintBottom_toBottomOf="@id/pulse_help_breath"/>

    <Button
        style="?attr/materialIconButtonFilledStyle"
        android:id="@+id/play_breath_help"
        android:background="@drawable/ic_play"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="82dp"
        app:layout_constraintTop_toBottomOf="@id/pulse_help_breath"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>